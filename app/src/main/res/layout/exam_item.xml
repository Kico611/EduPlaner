<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/examSubjectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predmet"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/examDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/examNotesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilješke"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/editExamButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Uredi"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/deleteExamButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Obriši"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</LinearLayout>
